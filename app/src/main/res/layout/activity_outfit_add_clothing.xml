<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outfits.AddClothingActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/closetBanner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#673AB7"
      android:padding="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select clothes..."
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/addClothesRecycler"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:backgroundTint="#673AB6"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/closetBanner" />

  <Button
      android:id="@+id/addClothesConfirmBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="8dp"
      android:backgroundTint="#673AB6"
      android:drawableTint="#673AB6"
      android:text="Confirm"
      android:textColorLink="#673AB6"
      app:layout_constraintBottom_toBottomOf="@+id/closetBanner"
      app:layout_constraintEnd_toEndOf="@+id/closetBanner"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/selectClothingforOutfit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:visibility="gone"
      android:text="Button" />


</androidx.constraintlayout.widget.ConstraintLayout>